alias emerge='sudo emerge'
alias es='emerge -s '
alias eselect='sudo eselect'
alias ess='emerge --sync && emaint sync -A'
alias eu='emerge --sync && eix-sync -a && emaint sync -A && emerge -uvaDN --with-bdeps=y @world && emerge --depclean'
alias euse='sudo euse'
alias ew='emerge -W'
